<div class="container my-3">
  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <p class="h2 display-4 text-center">Log in</p>
      <div class="form-group">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: "input-group" },
                        label_html: { class: 'text-light bg-dark mt-2 rounded py-1 px-2' } %>
            <%= f.input :password,
                        required: false,
                        input_html: { class: "input-group" },
                        label_html: { class: 'text-light bg-dark rounded py-1 px-2' } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="btn btn-dark">
            <%= f.button :submit, "Log in", class: 'text-light' %>
          </div>
        <% end %>
      </div>
      
      <%= render "devise/shared/links" %>
      
    </div>
    <div class="col-3">
    </div>
  </div>
</div>
